<h3>Comments</h3>
<% @place.comments.each do |comment| %>
	<%= comment.body %>
	<%= link_to 'Edit', [comment.place, comment] %>
	<%= link_to 'Delete', [comment.place, comment], method: :delete %></br>
<% end %>
<h3>Add a new comment</h3>
<%= form_for ([@place, @place.comments.build]) do |f| %>
	<%= f.label :yorum %></br>
	<%= f.text_area :body, placeholder: 'Yorum yapınız.' %></br>
	<%= f.submit %>
	
<% end %>