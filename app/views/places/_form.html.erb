<%= form_for @place do |f| %>
	<%= f.label :Şirket_ismi %>
	<%= f.text_field :name, placeholder: 'Şirket adı' %></br>
	<%= f.label :adres %>
	<%= f.text_area :address, placeholder: 'Adres' %></br>
	<%= f.label :Kuruluş_tarihi %>
	<%= f.date_field :established_at, placeholder: 'Kuruluş tarihi' %></br>
	<%= f.label :Tel_no %>
	<%= f.text_field :phone_number, placeholder: 'Tel no' %></br>
	<%= f.label :email %>
	<%= f.text_field :contact_mail, placeholder: 'Mail adresi' %></br>
	<%= f.label :Şehir %>
	<%= f.text_field :city, placeholder: 'Şehir' %></br>
	<%= f.label :açıklama %>
	<%= f.text_area :description, placeholder: 'Açıklama' %></br>
	<%= f.label :kategori_seçiniz %>
	<%= f.select :category_id, @categories %>
	<%= f.submit %>
<% end %>
<%= link_to 'Back', :back %>